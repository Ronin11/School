package object;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Polygon;

public class Pentagon extends Shape {
	   
	   public Pentagon(int x, int y, Color color){
		   super(x,y,color);
		   name = "Pentagon";
	   }
	   public Pentagon(){
		   name = "Pentagon";
	   }

	   @Override
	   public void draw(Graphics g) {
		   g.setColor(color);
		   int sides = 5;
		   int[] xPoints = new int[sides];
		   int[] yPoints = new int[sides];
		   double theta = 2 * Math.PI / sides;
		   for (int i = 0; i < sides; ++i) {
		       yPoints[i] = (int) Math.round(Math.cos(theta * i)*scale*baseSize)+baseSize;
		       xPoints[i] = (int) Math.round(Math.sin(theta * i)*scale*baseSize)+baseSize;
		       // etc...
		   }
		   Polygon p = new Polygon(xPoints, yPoints, sides);
		   //int[] xPoints = {x-(Math.round(baseSize*scale)/5)*2, x-(Math.round(baseSize*scale)/5), 
			//	   x, x+(Math.round(baseSize*scale)/5), x+(Math.round(baseSize*scale)/5)*2};
		   //int[] yPoints = {y+(Math.round(baseSize*scale)/2), y-(Math.round(baseSize*scale)/2), y+(Math.round(baseSize*scale)/2)};
		   g.fillPolygon(p);
	   }
	}
