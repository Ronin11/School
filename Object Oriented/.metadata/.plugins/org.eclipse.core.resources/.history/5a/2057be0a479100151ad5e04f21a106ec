package task;

import java.util.ArrayList;

public class Task {
	protected ArrayList<Task> subtasks = new ArrayList<Task>();
	protected Task prevTask;
	protected ArrayList<Engineer> assignedEngineers = new ArrayList<Engineer>();
	protected int id;
	protected String label;
	protected String description;
	protected float originalEstimatedHours, revisedEstimatedHours, percentComplete, 
	estimatedRemainingHours, estimatedRemainingWorkdays;
	
	public Task(){
		
	}
	
	public boolean isLeaf(){return subtasks.isEmpty();}
	public ArrayList<Task> getSubtasks(){return subtasks;}
	public void addSubtask(Task t){subtasks.add(t);}
	public Task getPrevTask(){return prevTask;}
	public void setPrevTask(Task t){prevTask = t;}
}
