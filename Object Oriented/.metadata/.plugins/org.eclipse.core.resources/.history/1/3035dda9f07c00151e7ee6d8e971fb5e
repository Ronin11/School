package object;

import java.awt.Color;
import java.util.HashMap;

public class ShapeFactory {
   private static final HashMap<String, Shape> circleMap = new HashMap();

   public static Shape getCircle(int x, int y, Color color) {
      return new Circle(x,y,color);
   }
   public static Shape getTriangle(int x, int y, Color color) {
	      return new Triangle(x,y,color);
   }
   public static Shape getSquare(int x, int y, Color color) {
	      return new Square(x,y,color);
   }
   public static Shape getPentagon(int x, int y, Color color) {
	      return new Pentagon(x,y,color);
   }
   public static Shape getStar(int x, int y, Color color) {
	      return new Star(x,y,color);
   }
   public static Shape getHeart(int x, int y, Color color) {
	      return new Heart(x,y,color);
   }
}
