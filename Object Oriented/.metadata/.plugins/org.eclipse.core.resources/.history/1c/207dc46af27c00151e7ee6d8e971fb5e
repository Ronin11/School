package object;

import java.awt.Color;
import java.awt.Graphics;

public class Pentagon extends Shape {
	   
	   public Pentagon(int x, int y, Color color){
		   super(x,y,color);
		   name = "Pentagon";
	   }
	   public Pentagon(){
		   name = "Pentagon";
	   }

	   @Override
	   public void draw(Graphics g) {
		   g.setColor(color);
		   int sides = 5;
		   double theta = 2 * Math.PI / sides;
		   for (int i = 0; i < sides; ++i) {
		       double x = Math.cos(theta * i);
		       double y = Math.sin(theta * i);
		       // etc...
		   }
		   int[] xPoints = {x-(Math.round(baseSize*scale)/5)*2, x-(Math.round(baseSize*scale)/5), 
				   x, x+(Math.round(baseSize*scale)/5), x+(Math.round(baseSize*scale)/5)*2};
		   int[] yPoints = {y+(Math.round(baseSize*scale)/2), y-(Math.round(baseSize*scale)/2), y+(Math.round(baseSize*scale)/2)};
		   g.fillPolygon(xPoints, yPoints, 5);
	   }
	}
