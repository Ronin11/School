package object;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Point;
import java.awt.Polygon;

public class Triangle extends ObjectShape {
	   Polygon p;
	   public Triangle(int x, int y, Color color){
		   super(x,y,color);
		   name = "Triangle";
	   }
	   public Triangle(){
		   name = "Triangle";
	   }
	   protected void buildShape(){
		   int[] xPoints = {x-(Math.round(baseSize*scale)/2), x, x+(Math.round(baseSize*scale)/2)};
		   int[] yPoints = {y+(Math.round(baseSize*scale)/2), y-(Math.round(baseSize*scale)/2), y+(Math.round(baseSize*scale)/2)};
		   p = new Polygon(xPoints, yPoints, 3);
		   shape = p;
	   }
	   
	   @Override
	   public void draw(Graphics g) {
		   g.setColor(color);
		   if(p == null)
			   buildShape();
		   g.fillPolygon(p);
	   }
	   protected void drawEdge(Graphics g){
		   g.drawPolygon(p);
	   }
}
